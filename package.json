{
    "name": "yurucamp-monorepo",
    "version": "1.0.0",
    "private": true,
    "scripts": {
        "dev": "concurrently \"bun run dev:backend\" \"bun run dev:frontend\"",
        "dev:backend": "cd backend && bun run dev",
        "dev:frontend": "cd frontend && bun run dev",
        "build": "concurrently \"bun run build:backend\" \"bun run build:frontend\"",
        "build:backend": "cd backend && bun run build",
        "build:frontend": "cd frontend && bun run build",
        "install:all": "cd backend && bun install && cd ../frontend && bun install"
    },
    "devDependencies": {
        "concurrently": "^9.1.2"
    }
}